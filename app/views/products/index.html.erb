<br>
<div class="row">
  <% @products.each do |product| %>
  <div class="col-xs-4">
    <div class="card-img-top" style="background: url('<%= image_path product.picture %>') no-repeat center center;background-size:cover;">
      <div class="img-hover"></div>
      <p class="title-card"><%= product.city %></p>
      <p class="product-name"><%= product.name %></p>
    </div>
    <p class="product-description"><%= product.description %></p>

    <%= link_to "Voir plus", "products/#{product.id}.html", class: "btn btn-default", id: "btn-voir" %>
  </div>

  <% end %>
</div>
<br>
<div class="column">
  <% if current_user %>
    <% if current_user.bookings.any? %>
      <h4>Your bookings: </h4>
        <% current_user.bookings.each do |booking| %>
          <h5>Price: $<%= booking.price %><br>
            <%= booking.date %></h5>
          <% end %>
          <% else %>
          <h4>You have no bookings</h4>
        <% end %>
    <% else %>
  <h4>You are not logged in</h4>
  <% end %>
<div class="row">
  <div class="col-md-12 col-xs-12">
    <div id="map" style="width: 100%; height: 600px;"></div>
  </div>
</div>
<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).on('ready', function() {
      handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function(){
        markers = handler.addMarkers(<%= raw @markers.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
      });
      $(".card-img-top").hover(function(){
      $(this).find(".img-hover").css('display', 'block');
      console.log("putin");
      }, function() {
       $(this).find(".img-hover").css('display', 'none');
      });
    });
  <% end %>
<% end %>
